<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
           
	<bean id = "student1" class = "springioc.vid03.constructorarg.Student">
		<constructor-arg name = "id" value = "1"/>
		<constructor-arg name = "name" value = "Sushant"/>
	</bean>
	
	<bean id = "student2" class = "springioc.vid03.constructorarg.Student">
		<constructor-arg name = "id" value = "2" type = "int"/>
	</bean>
</beans>




